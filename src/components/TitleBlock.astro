---
const { title, subtitle, date } = Astro.props
---

<style lang="scss">

  header {
    position: relative;
    h1 {
      margin: 0;
      font-size: 2.5rem;
      font-family: var(--font-heading);
      line-height: 1.1;
    }
    .subtitle{
      font-family: var(--font-heading);
      margin: 0;
      color: var(--color-secondary);
    }
    time {
      font-size: 0.8rem;
    }
  }

</style>

<header>
  <h1>{title}</h1>
  <p class="subtitle">{subtitle}</p>
  <time datetime={date}>{date}</time>
</header>